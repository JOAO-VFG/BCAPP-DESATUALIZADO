<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".MainBCAPP"
        tools:showIn="@layout/activity_mainnft">

    <TextView
            android:id="@+id/TV_TEXT"
            android:layout_width="177dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="Main BCHAIN App"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.09"
            app:layout_constraintHorizontal_bias="0.503"/>


    <TextView
            android:id="@+id/TV_TEXT2"
            android:layout_width="266dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="Satoshis:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.749"
            app:layout_constraintHorizontal_bias="0.531"/>

    <TextView
            android:id="@+id/TV_TEXT3"
            android:layout_width="362dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="BSV Wallet:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="254dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="2.0"
            app:layout_constraintHorizontal_bias="0.673" app:layout_constraintTop_toBottomOf="@+id/buttonMS9"/>
    <TextView
            android:id="@+id/TV_TEXT4"
            android:layout_width="266dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="Miritis:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.884"
            app:layout_constraintHorizontal_bias="0.531"/>
    <Button
            android:text="WRITE BC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMS1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.235"
            app:layout_constraintVertical_bias="0.208"/>
    <!--
    <Button
            android:text="Money Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMS4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.499"/>
    -->
    <Button
            android:text="READ BC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMS2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.789"
            app:layout_constraintVertical_bias="0.208"/>

    <Button
            android:text="PVT KEY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMS6"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.789"
            app:layout_constraintVertical_bias="0.334"/>
    <Button
            android:text="SEND BSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMS7"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.232"
            app:layout_constraintVertical_bias="0.334"/>
    <Button
            android:text="TX Verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMS8"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.486"
            app:layout_constraintVertical_bias="0.457" android:layout_marginLeft="9dp" android:layout_marginStart="9dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonMS9" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"/>
    <Button
            android:text="Arduino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonMS9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.775"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              app:constraint_referenced_ids="TV_TEXT3" android:id="@+id/barrier"
                                              app:barrierDirection="left"/>
